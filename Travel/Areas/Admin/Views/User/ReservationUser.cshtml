@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int? counter = 0;
}

<h1>Reservation User Accept</h1>

@if (!Model.Any())
{
    <span>Geçmiş rezervasyon bulunmamaktadır.</span>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>No</th>
          
            <th>Destinations</th>
            <th>Person Count</th>
            <th>Date</th>
            <th>Details</th>

        </tr>
        @foreach (var item in Model)
        {
            counter = counter + 1;
            <tr>
                <td>@counter</td>
              
                <td>@item.Destination.City</td>
                <td>@item.PersonCount</td>
                <td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
                <td><a href="/Admin/User/DeleteUser/" class="btn btn-outline-danger">Details</a></td>
            </tr>
        }
    </table>
   

}