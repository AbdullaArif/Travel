@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Comment List</h1>

@if (!Model.Any())
{
    <span>Geçmiş rezervasyon bulunmamaktadır.</span>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>No</th>
            <th>User</th>
            <th>Date</th>
            <th>Destination</th>
            <th>Description</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CommentId</td>
                <td>@item.CommentUser </td>
                <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                <td>@item.Destination.City</td>
                <td>@item.CommentContent</td>

                <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationId" class="btn btn-outline-danger">Delete</a></td>
            </tr>
        }
    </table>
    <a href="/Admin/Destination/AddDestination" class="btn btn-outline-primary">Create Destination</a>
}